<UserControl x:Class="TachTypingTutor_v1._06._18.InputTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TachTypingTutor_v1._06._18"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="500">
    <Border Name="border" BorderThickness="1" BorderBrush="Wheat" CornerRadius="5"  Background="AliceBlue">

        <Grid Name="grid">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Canvas ClipToBounds="True">
                <TextBlock Name="tblOutput" FontSize="15" HorizontalAlignment="Left" FontFamily="Consolas"/>
            </Canvas>
            <Canvas ClipToBounds="True" Grid.Row="1" >
                <TextBlock Name="tblInput" FontSize="15" HorizontalAlignment="Left" FontFamily="Consolas" VerticalAlignment="Top"/>
            </Canvas>
            <Rectangle Fill="LightGreen" Grid.Row="1" VerticalAlignment="Top" Margin="5 -1" Height="2"/>
        </Grid>

    </Border>
</UserControl>
